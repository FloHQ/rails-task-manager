
<div class="container">
  <h1> My Tasks</h1>
  <% @tasks.each do |task| %>
    <h3><% if task.completed %>
     <i class="fa fa-check-square-o" aria-hidden="true"></i>
    <% else %>
     <i class="fa fa-square-o" aria-hidden="true"></i>
    <% end %>
      <%= link_to task.title, controller: "tasks", action: "show", id: task.id %>
      <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, "tasks/#{task.id}", method: :delete, data: { confirm: "Are you sure?" }%>
    </h3>
  <% end %>
  <p><i class="fa fa-plus" aria-hidden="true"></i> <%= link_to 'Create New Task', 'tasks/new' %>
</div>
